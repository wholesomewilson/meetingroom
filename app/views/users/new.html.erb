<div class="card bg-light col-lg-6 offset-lg-3">
  <div class="card-header">
    <%= t(".title") %>
  </div>
  <div class="card-body">
    <%= form_for @user do |form| %>
      <%= render partial: '/users/form', object: form %>
      <div class="submit-field">
        <%= form.submit class: "mt-3 btn btn-primary float-right"  %>
      </div>
    <% end %>
  </div>
</div>
